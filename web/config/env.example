# ShareMyCard Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# SSH Tunnel Configuration (for remote database access)
SSH_HOST=your.server.ip.address
SSH_PORT=22
SSH_USER=your_ssh_username
SSH_KEY=/path/to/your/private/key

# Gmail API Configuration
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=https://sharemycard.app/api/auth/gmail-callback.php

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# Security Settings
SESSION_TIMEOUT=3600
VERIFICATION_CODE_LENGTH=6
VERIFICATION_CODE_EXPIRY=300

# File Upload Settings
MAX_FILE_SIZE=26214400
UPLOAD_PATH=/path/to/upload/directory

# Email Settings
EMAIL_FROM_NAME=ShareMyCard
EMAIL_FROM_ADDRESS=noreply@sharemycard.app

# Application Settings
DEBUG_MODE=false
LOG_ERRORS=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://sharemycard.app,https://www.sharemycard.app
